  <EditText
      android:id="@+id/login"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toTopOf="@id/mdp"
      app:layout_constraintTop_toBottomOf="@id/hello"
      android:cursorVisible="true"
      android:singleLine="true"
      android:autofillHints="Login"
      android:fontFamily="sans-serif-condensed"
      android:bufferType="normal"
      android:ems="50"
      android:inputType="textPersonName"
      />

  <EditText
      android:id="@+id/mdp"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toTopOf="@id/button_connec"
      app:layout_constraintTop_toBottomOf="@id/login"
      android:cursorVisible="true"
      android:singleLine="true"
      android:autofillHints="Mot de passe"
      android:fontFamily="sans-serif-condensed"
      android:bufferType="normal"
      android:ems="50"
      android:inputType="textPassword"
      />

    <Button
        android:id="@+id/button_connec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:padding="30dp"
        android:text="Connection"
        android:textStyle="bold"
        app:backgroundTint="@color/objet"
        app:iconTint="@color/font"
        app:layout_constraintBottom_toTopOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hello"
        app:layout_constraintVertical_bias="0.8"/>

   <ImageView
        android:id="@+id/imageView"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/button_connec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_newmember" />

    <Button
        android:id="@+id/button_newmember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"
        android:text="Nouveau Membre"
        app:backgroundTint="#ABBA99BF"
        app:iconTint="#9C27B0"
        tools:background="#9E432D47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>