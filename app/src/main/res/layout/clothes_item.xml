<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/clothe_item_back"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white_weather"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clothe_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/objet"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/clothe_item_back"
        app:layout_constraintTop_toTopOf="@+id/clothe_item_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/clothe_item_back" />

    <TextView
        android:id="@+id/clothe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clothe name"
        android:textColor="@color/font"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@id/clothe_item_back"
        app:layout_constraintTop_toTopOf="@id/clothe_item_back"
        app:layout_constraintLeft_toRightOf="@id/clothe_item_image"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>