<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edressing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconweatheclothing"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconmeteoround"
        android:supportsRtl="true"
        android:theme="@style/Theme.EDressing">
        <activity
            android:name=".Connection.ConnectionUserActivity"
            android:theme="@style/Theme.EDressing.NoActionBar"/>
        <activity
            android:name=".Connection.CreateAccount"
            android:theme="@style/Theme.EDressing.NoActionBar"/>
        <activity
            android:name=".BottomNaviguation"
            android:label="@string/title_activity_bottom_naviguation" />
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.EDressing.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>